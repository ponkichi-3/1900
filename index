    // ====== å˜èªãƒ‡ãƒ¼ã‚¿ã®èª­ã¿è¾¼ã¿ ======
    async function loadVocabularyData(){
      try{
        const res=await fetch('target1900å®Œå…¨ç‰ˆ.csv', {cache:'no-store'});
        if(res.ok){
          const csv=await res.text();
          const lines=csv.trim().split('\n');
          vocabularyData=lines.slice(1).map(line=>{
            const [id, english, japanese] = line.split(',');
            return { id:parseInt(id), english:(english||'').trim(), japanese:(japanese||'').trim() };
          }).filter(v=>!isNaN(v.id) && v.english && v.japanese);
          console.log('CSVã‹ã‚‰å˜èªãƒ‡ãƒ¼ã‚¿ã‚’èª­ã¿è¾¼ã¿:', vocabularyData.length, 'ä»¶');
          return;
        }
      }catch(e){ console.warn('CSVèª­ã¿è¾¼ã¿ã‚¨ãƒ©ãƒ¼:', e); }
      // ãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯ï¼ˆæœ€å°ãƒ‡ãƒ¼ã‚¿ï¼‰
      vocabularyData=[
        {id:1,english:'believe',japanese:'ã‚’ä¿¡ã˜ã‚‹'},
        {id:2,english:'consider',japanese:'ã‚’è¦‹ãªã™'},
        {id:3,english:'expect',japanese:'ã‚’äºˆæœŸã™ã‚‹'},
        {id:4,english:'decide',japanese:'æ±ºã‚ã‚‹'},
        {id:5,english:'allow',japanese:'ã‚’è¨±ã™'},
        {id:6,english:'remember',japanese:'æ€ã„å‡ºã™'},
        {id:7,english:'worry',japanese:'å¿ƒé…ã™ã‚‹'},
        {id:8,english:'concern',japanese:'ã«é–¢ä¿‚ã™ã‚‹'},
        {id:9,english:'suggest',japanese:'ã‚’ææ¡ˆã™ã‚‹'},
        {id:10,english:'explain',japanese:'èª¬æ˜ã™ã‚‹'}
      ];
